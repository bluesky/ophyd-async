{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  // Keep uv.lock up to date
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    // Disable github actions that are managed by python-copier-template
    {
      "matchPackageNames": [
        "actions/checkout",
        "softprops/action-gh-release",
        "actions/download-artifact",
        "astral-sh/setup-uv",
        "github/codeql-action"
      ],
      "matchManagers": [
        "github-actions"
      ],
      "enabled": false
    },
    // Disable python version as that is managed by python-copier-template
    {
      "matchManagers": [
        "pyenv"
      ],
      "enabled": false
    }

  ]
}
